{
  "manifest_version": 3,
  "name": "Tweet Bot - AI Tweet Suggestions",
  "version": "1.0.0",
  "description": "AI-powered tweet replies, quote tweets, and new tweets using Claude",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://openrouter.ai/*",
    "https://pbs.twimg.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "scripts": ["background/service-worker.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "content/tweet-extractor.js",
        "content/ui-injector.js",
        "content/popup-ui.js",
        "content/content.js"
      ],
      "css": [
        "styles/content.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "settings/settings.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "tweet-bot@example.com",
      "strict_min_version": "128.0"
    }
  }
}
